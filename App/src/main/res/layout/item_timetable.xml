<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/timetable_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="08:00 - 12:00"
        android:textColor="@color/light_bg_dark_primary_text" />

    <TextView
        android:id="@+id/timetable_weekdays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="108dp"
        android:text="Lun, Mer, Ven"
        android:textColor="@color/light_bg_dark_secondary_text" />

</RelativeLayout>
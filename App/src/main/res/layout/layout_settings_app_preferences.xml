<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:minHeight="60dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/settings_tracking_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/list_items_padding">

            <ImageView
                android:id="@+id/gps_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:padding="12dp"
                android:src="@drawable/ic_gps"
                android:tint="@color/colorAccent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_toRightOf="@id/gps_icon"
                android:gravity="center_vertical"
                android:text="Tracking posizione" />

            <Switch
                android:id="@+id/tracking_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp" />

        </RelativeLayout>

        <include layout="@layout/horizontal_divider" />

        <RelativeLayout
            android:id="@+id/settings_sync_mode_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/list_items_padding">

            <ImageView
                android:id="@+id/sync_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:padding="12dp"
                android:src="@drawable/ic_sync"
                android:tint="@color/colorAccent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_toRightOf="@id/sync_icon"
                android:gravity="center_vertical"
                android:text="Sincronizzazione" />

            <Spinner
                android:id="@+id/sync_mode_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:backgroundTint="@color/colorAccent"
                android:entries="@array/sync_mode_array"
                android:spinnerMode="dialog" />

        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>


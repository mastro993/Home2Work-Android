<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:mContext="it.gruppoinfor.home2work.fragments.ProfileFragmentAchievements">

    <android.support.v7.widget.RecyclerView
        android:clipToPadding="false"
        android:padding="@dimen/list_padding"
        android:id="@+id/achievement_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="128dp"
        android:layout_marginTop="64dp"
        android:gravity="center_horizontal"
        android:text="Nessun obiettivo disponibile"
        android:textColor="@color/light_bg_dark_secondary_text"
        android:textSize="16dp"
        android:textStyle="italic"
        android:visibility="gone" />

</LinearLayout>

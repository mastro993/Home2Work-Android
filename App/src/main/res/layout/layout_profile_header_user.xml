<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingBottom="56dp"
    android:paddingTop="56dp">

    <it.gruppoinfor.home2work.custom.AvatarView
        android:id="@+id/avatar_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:size="normal" />

    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/avatar_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Nome Cognome"
        android:textColor="@color/dark_bg_light_primary_text"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/job_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:text="Azienda"
        android:textColor="@color/dark_bg_light_secondary_text" />

    <Button
        android:id="@+id/button_send_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/job_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_button_send_message"
        android:clickable="true"
        android:focusable="true"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_mail_white"
        android:includeFontPadding="false"
        android:text="Invia un messaggio"
        android:textColor="@color/dark_bg_light_primary_text" />

</RelativeLayout>
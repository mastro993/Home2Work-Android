<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background"
    android:orientation="vertical"
    tools:ignore="HardcodedText,ContentDescription"
    tools:mContext="it.gruppoinfor.home2work.activities.EditProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingBottom="48dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:text="Informazioni personali"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cardview_light_background"
            android:elevation="@dimen/cardview_default_elevation"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:alpha="0.5"
                android:text="@string/lorem"
                android:textSize="16dp" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:text="Profili social"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cardview_light_background"
            android:elevation="@dimen/cardview_default_elevation"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <EditText
                android:id="@+id/input_fb"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@android:color/transparent"
                android:drawablePadding="32dp"
                android:drawableStart="@drawable/ic_facebook"
                android:hint="@string/activity_configuration_social_fb"
                android:inputType="textCapWords"
                android:lines="1" />

            <include layout="@layout/horizontal_divider" />

            <EditText
                android:id="@+id/input_tw"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@android:color/transparent"
                android:drawablePadding="32dp"
                android:drawableStart="@drawable/ic_twitter"
                android:hint="@string/activity_configuration_social_tw"
                android:inputType="textCapWords"
                android:lines="1" />

            <include layout="@layout/horizontal_divider" />

            <EditText
                android:id="@+id/input_tg"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@android:color/transparent"
                android:drawablePadding="32dp"
                android:drawableStart="@drawable/ic_telegram"
                android:hint="@string/activity_configuration_social_tg"
                android:inputType="textCapWords"
                android:lines="1" />


        </LinearLayout>


    </LinearLayout>


</ScrollView>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="56dp"
    android:layout_marginTop="56dp"
    android:orientation="vertical"
    tools:showIn="@layout/fragment_profile">

    <it.gruppoinfor.home2work.custom.AvatarView
        android:id="@+id/avatar_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:size="normal" />

    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/avatar_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Nome Cognome"
        android:textColor="@color/dark_bg_light_primary_text"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/job_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/border_text_view"
        android:text="Azienda"
        android:textColor="@color/dark_bg_light_secondary_text"
        android:textSize="12sp" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:animateLayoutChanges="true"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@color/window_background"
        android:elevation="4dp"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="@dimen/loading_progressbar_size"
            android:layout_height="@dimen/loading_progressbar_size"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:indeterminateTint="@color/colorAccent" />

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/error_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@color/window_background"
        android:elevation="4dp"
        android:visibility="gone">

        <ImageView
            android:alpha="0.75"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_above="@id/text_error"
            android:layout_centerInParent="true"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_status_view_error" />

        <TextView
            android:textStyle="normal"
            android:id="@+id/text_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginEnd="64dp"
            android:layout_marginStart="64dp"
            android:text="text_error"
            android:textAlignment="center" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@color/window_background"
        android:elevation="4dp"
        android:visibility="visible">

        <TextView
            android:textStyle="normal"
            android:id="@+id/text_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginEnd="64dp"
            android:layout_marginStart="64dp"
            android:text="text_empty"
            android:textAlignment="center" />


    </RelativeLayout>

</RelativeLayout>
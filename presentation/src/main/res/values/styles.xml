<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/light_bg_dark_primary_text</item>
        <item name="android:actionMenuTextColor">@color/light_bg_dark_primary_text</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="popupMenuStyle">@style/Base.Widget.AppCompat.Light.PopupMenu</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/light_bg_dark_primary_text</item>
        <item name="android:textColorPrimaryInverse">@color/dark_bg_light_primary_text</item>
        <item name="android:textColorSecondary">@color/light_bg_dark_secondary_text</item>
        <item name="android:textColorSecondaryInverse">@color/dark_bg_light_secondary_text</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <!--<iname_name="android:statusBarColor">@color/colorPrimary</item>-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorPrimary">@color/light_bg_dark_primary_text</item>
        <item name="android:textColorPrimaryInverse">@color/dark_bg_light_primary_text</item>
        <item name="android:textColorSecondary">@color/light_bg_dark_secondary_text</item>
        <item name="android:textColorSecondaryInverse">@color/dark_bg_light_secondary_text</item>
    </style>

    <style name="LightEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/dark_bg_light_hint_text</item>
        <item name="android:textColor">@color/dark_bg_light_primary_text</item>
    </style>

    <style name="LightTextInput" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/dark_bg_light_hint_text</item>
        <item name="android:textColor">@color/dark_bg_light_primary_text</item>
        <item name="android:color">@color/dark_bg_light_primary_text</item>
        <item name="android:textSize">20sp</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/dark_bg_light_secondary_text</item>
        <item name="colorControlActivated">@color/dark_bg_light_primary_text</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="AppTheme.GradientTheme" parent="AppTheme.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/gradient</item>
    </style>

    <style name="AppTheme.SignInTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.FullScreen" parent="AppTheme.GradientTheme">
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="ProgressFragment.UsernameStyle" parent="TextAppearance.AppCompat.Light.SearchResult.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/dark_bg_light_primary_text</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FullScreenDialogStyle" parent="AppTheme.NoActionBar">
        <!--<item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>-->
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slideup</item>
        <item name="android:windowExitAnimation">@anim/slidedown</item>
    </style>
</resources>

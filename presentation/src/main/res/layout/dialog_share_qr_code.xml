<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/qr_code_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:contentDescription="QR Code condivisione"
        android:padding="16dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/gradient" />

    <ProgressBar
        android:id="@+id/pb_qr_code"
        android:layout_width="@dimen/loading_progressbar_size"
        android:layout_height="@dimen/loading_progressbar_size"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:indeterminateTint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@id/qr_code_image_view"
        app:layout_constraintEnd_toEndOf="@id/qr_code_image_view"
        app:layout_constraintStart_toStartOf="@id/qr_code_image_view"
        app:layout_constraintTop_toTopOf="@id/qr_code_image_view" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/qr_code_image_view"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Inquadrando questo codice con la loro applicazione i passeggeri potranno partecipare alla condivisione."
        android:textAlignment="center"
        android:textColor="@color/light_bg_dark_secondary_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/qr_code_image_view" />

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    tools:ignore="HardcodedText,RtlHardcoded,ContentDescription"
    tools:mContext="it.gruppoinfor.home2work.fragments.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="48dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:padding="16dp"
            android:text="Utente" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:padding="16dp"
            android:text="Riepilogo dati utente"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/light_bg_dark_primary_text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:padding="16dp"
            android:text="Modifica profilo"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/light_bg_dark_primary_text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:padding="16dp"
            android:text="Modifica password"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/light_bg_dark_primary_text" />

        <include layout="@layout/horizontal_divider" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:padding="16dp"
            android:text="Impostazioni" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:padding="16dp"
            android:text="Tracking posizione"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/light_bg_dark_primary_text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:padding="16dp"
            android:text="Notifiche"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/light_bg_dark_primary_text" />

        <include layout="@layout/horizontal_divider" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:padding="16dp"
            android:text="Informazioni sull'applicazione"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/button_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:padding="16dp"
            android:text="Esci"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent" />

    </LinearLayout>

</ScrollView>


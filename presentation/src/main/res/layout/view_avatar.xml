<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false">

    <ImageView
        android:id="@+id/user_propic"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_centerInParent="true"
        android:elevation="@dimen/cardview_default_elevation"
        android:padding="8dp"
        android:src="@drawable/ic_avatar_placeholder"
        android:transitionName="avatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/level_frame"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:elevation="6dp"
        tools:visibility="visible"
        android:visibility="gone"
        android:src="@drawable/shape_hexagon"
        app:layout_constraintBottom_toBottomOf="@id/user_propic"
        app:layout_constraintEnd_toEndOf="@id/user_propic"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="@id/user_propic"
        app:layout_constraintTop_toTopOf="@id/user_propic"
        app:layout_constraintVertical_bias="0.95" />

    <TextView
        tools:visibility="visible"
        android:visibility="gone"
        android:id="@+id/exp_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:elevation="8dp"
        android:textAlignment="center"
        android:textColor="@color/light_bg_dark_primary_text"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@id/level_frame"
        app:layout_constraintEnd_toEndOf="@id/level_frame"
        app:layout_constraintStart_toStartOf="@id/level_frame"
        app:layout_constraintTop_toTopOf="@id/level_frame"
        tools:text="-" />


</android.support.constraint.ConstraintLayout>
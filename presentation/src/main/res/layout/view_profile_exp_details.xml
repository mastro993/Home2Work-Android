<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_light_background"
    android:orientation="vertical"
    android:elevation="@dimen/cardview_default_elevation"
    android:paddingTop="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="26dp"
        android:layout_marginStart="26dp"
        android:includeFontPadding="false"
        android:textSize="16sp"
        android:text="@string/fragment_profile_card_exp" />

    <TextView
        android:id="@+id/text_exp_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:text="@string/fragment_profile_card_exp_value"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        tools:text="1337" />

    <ProgressBar
        android:id="@+id/progress_exp"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="26dp"
        android:layout_marginStart="26dp"
        android:progressDrawable="@drawable/bg_progressbar_drawable"
        tools:progress="34" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="26dp"
        android:layout_marginStart="26dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/text_current_lvl_exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/fragment_profile_card_current_lvl_exp_value"
            android:textColor="@color/light_bg_dark_secondary_text"
            android:textSize="12sp"
            tools:text="1000" />

        <TextView
            android:id="@+id/text_next_lvl_exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/fragment_profile_card_next_lvl_exp_value"
            android:textColor="@color/light_bg_dark_secondary_text"
            android:textSize="12sp"
            tools:text="2000" />

    </RelativeLayout>

    <include layout="@layout/horizontal_divider" />

</LinearLayout>
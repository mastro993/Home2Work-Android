<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/msgView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:alpha="0.5"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal">

        <!-- TODO messaging system -->

        <ImageView
            android:layout_width="72dp"
            android:layout_height="64dp"
            android:alpha="0.8"
            android:padding="20dp"
            android:src="@drawable/ic_mail"
            android:tint="@color/light_bg_dark_primary_text"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Invia un messaggio diretto"
            android:textColor="@color/light_bg_dark_primary_text"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/noContactsView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal"
        android:paddingBottom="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:alpha="0.9"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:text="Questo utente non ha inserito altri metodi di contatto"
            android:textAlignment="center"
            android:textColor="@color/light_bg_dark_primary_text"
            android:textSize="16sp"
            android:textStyle="italic" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/phoneView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="72dp"
            android:layout_height="64dp"
            android:alpha="0.8"
            android:padding="20dp"
            android:src="@drawable/ic_phone"
            android:tint="@color/light_bg_dark_primary_text"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/phoneText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="+39 123 4567890"
            android:textColor="@color/light_bg_dark_primary_text"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/twitterView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="72dp"
            android:layout_height="64dp"
            android:alpha="0.8"
            android:padding="20dp"
            android:src="@drawable/ic_twitter"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/twitterText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="\@username"
            android:textColor="@color/light_bg_dark_primary_text"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/facebookView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="72dp"
            android:layout_height="64dp"
            android:alpha="0.8"
            android:padding="20dp"
            android:src="@drawable/ic_facebook"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/facebookText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="username"
            android:textColor="@color/light_bg_dark_primary_text"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/telegramView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="72dp"
            android:layout_height="64dp"
            android:alpha="0.8"
            android:padding="20dp"
            android:src="@drawable/ic_telegram"
            android:tint="#0088cc"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/telegramText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="\@username"
            android:textColor="@color/light_bg_dark_primary_text"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>
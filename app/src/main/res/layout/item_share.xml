<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/list_items_spacing"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="@dimen/list_items_padding">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/guest_avatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="-65dp"
                android:layout_toRightOf="@id/host_avatar"
                android:padding="13dp"
                android:src="@drawable/ic_avatar_placeholder"
                android:transitionName="avatar"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="2dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/host_avatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="13dp"
                android:src="@drawable/ic_avatar_placeholder"
                android:transitionName="avatar"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_width="2dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_info_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:ellipsize="marquee"
                android:text="Condivisione con Tizio Caio"
                android:textColor="@color/light_bg_dark_primary_text"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/distance_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="999,99 Km"
                android:textColor="@color/light_bg_dark_secondary_text" />

            <TextView
                android:id="@+id/karma_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="500 punti karma"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/exp_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="500 XP"
                android:textColor="@color/colorAccent" />


        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>


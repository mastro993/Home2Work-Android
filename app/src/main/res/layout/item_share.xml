<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingBottom="2.5dp"
    tools:ignore="HardcodedText">

    <View
        android:layout_width="0.5dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:alpha="0.5"
        android:background="@color/light_bg_dark_hint_text" />

    <ImageView
        android:id="@+id/image_share_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/shape_share_driver"
        android:tint="@color/colorPrimary" />

    <TextView
        android:id="@+id/text_share_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="23dp"
        android:text="Driver"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_share_datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_share_type"
        android:layout_alignBottom="@+id/text_share_type"
        android:layout_alignEnd="@+id/cardView2"
        android:text="Il 23/01/2017 alle 9:00"
        android:textColor="@color/light_bg_dark_hint_text"
        android:textSize="12sp" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:background="@color/white"
        android:clipToPadding="false">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="16dp"
            android:stretchColumns="1">

            <TableRow>

                <TextView
                    android:layout_marginEnd="8dp"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/ic_share_guests"
                    android:text="Ospiti:" />

                <TextView
                    android:id="@+id/text_share_guests"
                    android:gravity="end"
                    android:text="XXXX" />

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_marginEnd="8dp"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/ic_share_distance"
                    android:text="Kilometri percorsi:" />

                <TextView
                    android:id="@+id/text_share_distance"
                    android:gravity="end"
                    android:text="XXXX" />

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_marginEnd="8dp"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/ic_share_fuel"
                    android:text="Carburante risparmiato:" />

                <TextView
                    android:id="@+id/text_share_fuel"
                    android:gravity="end"
                    android:text="XXXX" />

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_marginEnd="8dp"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/ic_share_emission"
                    android:text="Emissioni evitate:" />

                <TextView
                    android:id="@+id/text_share_emission"
                    android:gravity="end"
                    android:text="XXXX" />

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_marginEnd="8dp"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/ic_share_xp"
                    android:text="XP Guadagnata:" />

                <TextView
                    android:id="@+id/text_share_xp"
                    android:gravity="end"
                    android:text="XXXX" />

            </TableRow>


        </TableLayout>

        <include
            android:id="@+id/divider"
            layout="@layout/horizontal_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom" />

    </android.support.v7.widget.CardView>


</RelativeLayout>



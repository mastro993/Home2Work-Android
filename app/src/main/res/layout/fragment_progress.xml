<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="it.gruppoinfor.home2work.fragments.ProgressFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:paddingTop="20dp">

        <com.github.lzyzsd.circleprogress.DonutProgress
            android:id="@+id/karma_donut_progress"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:animateLayoutChanges="true"
            android:rotation="40"
            app:donut_finished_color="@color/colorAccent"
            app:donut_unfinished_color="#11454545"
            app:donut_progress="50"
            app:layout_constraintBottom_toBottomOf="@+id/user_propic"
            app:layout_constraintLeft_toLeftOf="@+id/user_propic"
            app:layout_constraintRight_toRightOf="@+id/user_propic"
            app:layout_constraintTop_toTopOf="@+id/user_propic" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_propic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_avatar_placeholder"
            android:transitionName="avatar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.39" />

        <ImageView
            android:id="@+id/level_container"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:animateLayoutChanges="true"
            android:elevation="@dimen/cardview_default_elevation"
            android:src="@drawable/shape_circle"
            app:layout_constraintBottom_toBottomOf="@+id/karma_donut_progress"
            app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintLeft_toLeftOf="@+id/karma_donut_progress"
            app:layout_constraintRight_toRightOf="@+id/karma_donut_progress"
            app:layout_constraintTop_toTopOf="@+id/karma_donut_progress"
            app:layout_constraintVertical_bias="0.9"
            tools:ignore="ContentDescription" />


        <TextView
            android:id="@+id/karma_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/cardview_default_elevation"
            android:text="0"
            android:textColor="@color/dark_bg_light_primary_text"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/level_container"
            app:layout_constraintLeft_toLeftOf="@+id/level_container"
            app:layout_constraintRight_toRightOf="@+id/level_container"
            app:layout_constraintTop_toTopOf="@+id/level_container" />

    </android.support.constraint.ConstraintLayout>


</FrameLayout>

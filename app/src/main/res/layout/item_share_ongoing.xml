<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:elevation="@dimen/cardview_default_elevation"
    app:cardCornerRadius="0dp">

    <LinearLayout
        android:id="@+id/ongoin_share_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ongoin_share_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:padding="8dp"
            android:text="Condivisione in corso"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp">

            <ImageView
                android:id="@+id/ongoing_share_host_avatar_view"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:elevation="2dp"
                android:src="@drawable/ic_avatar_placeholder"
                android:transitionName="avatar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/ongoing_share_host_avatar_view"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ongoing_share_host_name_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-2dp"
                    android:text="Giovanni Rossetti"
                    android:textColor="@color/light_bg_dark_primary_text"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/ongoing_share_guests_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="4dp"
                    android:drawableStart="@drawable/ic_guests"
                    android:foregroundGravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="XX ospiti" />


            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>



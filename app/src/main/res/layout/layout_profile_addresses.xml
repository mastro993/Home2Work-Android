<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/home_address_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="@dimen/list_items_padding">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:padding="12dp"
            android:src="@drawable/ic_house"
            android:tint="@color/colorAccent" />

        <TextView
            android:visibility="gone"
            android:id="@+id/home_address_text_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical"
            android:text="{indirizzo casa}" />

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/home_address_loading"
            style="@style/AVLoadingIndicatorView.Small"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            app:indicatorColor="@color/light_bg_dark_secondary_text"
            app:indicatorName="BallPulseIndicator" />

    </LinearLayout>

    <include layout="@layout/horizontal_divider" />

    <LinearLayout
        android:id="@+id/job_address_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="@dimen/list_items_padding">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:padding="12dp"
            android:src="@drawable/ic_job"
            android:tint="@color/colorAccent" />

        <TextView
            android:visibility="gone"
            android:id="@+id/job_address_text_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical"
            android:text="{indirizzo lavoro}" />

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/job_address_loading"
            style="@style/AVLoadingIndicatorView.Small"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            app:indicatorColor="@color/light_bg_dark_secondary_text"
            app:indicatorName="BallPulseIndicator" />

    </LinearLayout>

</LinearLayout>
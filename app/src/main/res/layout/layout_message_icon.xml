<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@android:style/Widget.ActionButton"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/messages_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:gravity="center"
        android:src="@drawable/ic_mail"
        android:tint="@color/white" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/messages_counter_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/messages_image_view"
        android:layout_alignTop="@id/messages_image_view"
        android:layout_marginRight="-3dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/shape_rounder_square"
        android:gravity="center"
        android:minWidth="17sp"
        android:paddingBottom="2dp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:paddingTop="1dp"
        android:text="@null"
        android:textColor="#ffffffff"
        android:textSize="11sp"
        android:textStyle="bold" />
</RelativeLayout>
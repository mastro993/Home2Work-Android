<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/white"
        android:paddingTop="20dp">

        <com.github.lzyzsd.circleprogress.DonutProgress
            android:id="@+id/karma_donut_progress"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:animateLayoutChanges="true"
            android:rotation="40"
            app:donut_finished_color="@color/colorAccent"
            app:donut_progress="50"
            app:donut_unfinished_color="#11454545"
            app:layout_constraintBottom_toBottomOf="@+id/user_propic"
            app:layout_constraintLeft_toLeftOf="@+id/user_propic"
            app:layout_constraintRight_toRightOf="@+id/user_propic"
            app:layout_constraintTop_toTopOf="@+id/user_propic" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_propic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_avatar_placeholder"
            android:transitionName="avatar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.39" />

        <ImageView
            android:id="@+id/level_container"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:animateLayoutChanges="true"
            android:elevation="@dimen/cardview_default_elevation"
            android:src="@drawable/shape_circle"
            app:layout_constraintBottom_toBottomOf="@+id/karma_donut_progress"
            app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintLeft_toLeftOf="@+id/karma_donut_progress"
            app:layout_constraintRight_toRightOf="@+id/karma_donut_progress"
            app:layout_constraintTop_toTopOf="@+id/karma_donut_progress"
            app:layout_constraintVertical_bias="0.9"
            tools:ignore="ContentDescription" />


        <TextView
            android:id="@+id/karma_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/cardview_default_elevation"
            android:text="0"
            android:textColor="@color/dark_bg_light_primary_text"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/level_container"
            app:layout_constraintLeft_toLeftOf="@+id/level_container"
            app:layout_constraintRight_toRightOf="@+id/level_container"
            app:layout_constraintTop_toTopOf="@+id/level_container" />

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Nome Cognome"
            android:textColor="@color/light_bg_dark_primary_text"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/job_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/border_text_view"
            android:text=" ... "
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:textStyle="bold|italic" />

    </LinearLayout>

</LinearLayout>